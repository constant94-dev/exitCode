<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/m_ScrollView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorMainWhite">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorMainWhite"
        android:orientation="vertical">

        <!-- 상단 로고 -->
        <androidx.constraintlayout.widget.ConstraintLayout
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="110dp">

            <ImageView
                android:id="@+id/RBF_back"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:src="@drawable/main_logo"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHeight_percent="0.2934"
                app:layout_constraintHorizontal_bias="0.1145"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.4011"
                app:layout_constraintWidth_percent="0.2833" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/RB_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/jalnan"
            android:gravity="center"
            android:letterSpacing="0.02"
            android:lineSpacingExtra="13.3sp"
            android:padding="20dp"
            android:text="복지 혜택 결과가 65개 있네요!"
            android:textColor="@color/colorBlack"
            android:textSize="30sp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/RbfBtn_recycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="30dp"
            android:scrollbars="none" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/RbfTitle_recycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="30dp"
            android:scrollbars="none" />

        <Button
            android:id="@+id/select_go"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/btn_welfare"
            android:fontFamily="@font/nanum_barun_gothic_bold"
            android:padding="30dp"
            android:text="맞춤혜택 보러가기"
            android:textColor="@color/colorMainWhite"
            android:textSize="40sp" />

        <!-- Footer -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#fbfbfb"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingTop="40dp"
            android:paddingRight="20dp"
            android:paddingBottom="30dp">

            <ImageView
                android:layout_width="94dp"
                android:layout_height="17dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/footer_title" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/jalnan"
                android:letterSpacing="-0.03"
                android:lineSpacingExtra="39.3sp"
                android:text="사용자에게 알맞는 복지 지원과 혜택을 알려드립니다."
                android:textColor="#7d7d7d"
                android:textSize="11sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/jalnan"
                android:lineSpacingExtra="6.5sp"
                android:text="Copyright © All rights reserved"
                android:textColor="#7d7d7d"
                android:textSize="11sp" />

            <!-- 앱스토어, 플레이 스토어 가로로 배열된 레이아웃 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="17dp"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/app_store" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:fontFamily="@font/jalnan"
                    android:letterSpacing="-0.02"
                    android:lineSpacingExtra="44.3sp"
                    android:text="app store"
                    android:textColor="#7d7d7d"
                    android:textSize="14.8sp" />

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="17dp"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/google_play_store" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/jalnan"
                    android:letterSpacing="-0.02"
                    android:lineSpacingExtra="45sp"
                    android:text="Google play"
                    android:textColor="#7d7d7d"
                    android:textSize="15sp" />

            </LinearLayout>

        </LinearLayout>
        <!-- Footer end -->

    </LinearLayout>

</ScrollView>