<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/benefit_layout"
        android:layout_width="281.3dp"
        android:layout_height="177.5dp"
        android:background="#fff"
        android:layout_marginRight="40dp"
        android:orientation="vertical">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/content_title"
                android:layout_width="50.5dp"
                android:layout_height="28dp"
                android:text="의료"
                android:background="#666fef"
                android:fontFamily="@font/nanum_gothic_coding_bold"
                android:textColor="#fff"
                android:textStyle="normal"
                android:layout_marginLeft="28.5dp"
                android:layout_marginTop="25.5dp"
                android:textSize="13.3sp"
                android:letterSpacing="-0.02"
                android:lineSpacingExtra="12.8sp"
                android:gravity="center"/>

            <View
                android:layout_width="155dp"
                android:layout_height="0dp"/>

            <ImageView
                android:id="@+id/more_information"
                android:layout_width="28.5dp"
                android:layout_height="28.5dp"
                android:layout_marginTop="25.5dp"
                android:src="@drawable/move_gray"/>
            
        </LinearLayout>
        
        <TextView
            android:id="@+id/information_text"
            android:layout_width="165dp"
            android:layout_height="48.3dp"
            android:layout_marginLeft="28.5dp"
            android:text="의료급여수급권자\n영유아건강검진비 지원"
            android:fontFamily="@font/nanum_gothic_coding_bold"
            android:textSize="16sp"
            android:textColor="#000000"
            android:letterSpacing="-0.03"
            android:lineSpacingExtra="10.5sp"
            android:layout_marginTop="42.8dp"/>

    </LinearLayout>

</LinearLayout>